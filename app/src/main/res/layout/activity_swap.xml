<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/tvSwapRoutineIcon_name"
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="Swap"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:paddingLeft="10dp"
        android:paddingBottom="5dp"/>
    <ImageView
        android:id="@+id/ivSwapIcon_Image"
        android:src="@drawable/swap_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:onClick="scan"
        android:layout_toLeftOf="@id/tvSwapRoutineIcon_name"
        android:paddingBottom="5dp"/>
    <LinearLayout
        android:id="@+id/llSwapLocationStepOuterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@id/ivSwapIcon_Image">
        <LinearLayout
            android:id="@+id/llSwapLocationStepEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/tvSwapLocationEditHeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Swap Location"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:visibility="visible"/>
            <RelativeLayout
                android:id="@+id/rlSwapLocationValueEditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <AutoCompleteTextView
                    android:id="@+id/actvSwapLocationValueEditField"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_alignParentTop="true"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:hint="Scan or Enter Location" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlSwapLocationStepViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/routinestepgradient"
            android:visibility="visible"
            android:layout_below="@id/llSwapLocationStepEditLayout">

            <TextView
                android:id="@+id/tvSwapLocationStepHeaderView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:maxWidth="200dp"
                android:gravity="center_vertical"
                android:textStyle="italic"
                android:textSize="25sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Location" />

            <TextView
                android:id="@+id/tvSwapLocationStepValueView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/tvSwapLocationStepHeaderView"
                android:hint="Scan or Enter Location" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwapNodeStepOuterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@id/llSwapLocationStepOuterLayout">
        <LinearLayout
            android:id="@+id/llSwapNodeStepEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/tvSwapNodeEditHeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Swap Node"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:visibility="visible"/>
            <RelativeLayout
                android:id="@+id/rlSwapNodeValueEditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <AutoCompleteTextView
                    android:id="@+id/actvSwapNodeValueEditField"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_alignParentTop="true"
                    android:inputType="textCapCharacters"
                    android:textAllCaps="true"
                    android:imeOptions="actionGo"
                    android:hint="Scan or Enter Node" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlSwapNodeStepViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/routinestepgradient"
            android:visibility="visible"
            android:layout_below="@id/llSwapNodeStepEditLayout">

            <TextView
                android:id="@+id/tvSwapNodeStepHeaderView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:maxWidth="200dp"
                android:gravity="center_vertical"
                android:textStyle="italic"
                android:textSize="25sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Node" />

            <TextView
                android:id="@+id/tvSwapNodeStepValueView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/tvSwapNodeStepHeaderView"
                android:hint="Scan or Enter Node" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwapAssetStepOuterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@id/llSwapNodeStepOuterLayout">
        <LinearLayout
            android:id="@+id/llSwapAssetStepEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/tvSwapAssetEditHeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter Swap Asset"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:visibility="visible"/>
            <RelativeLayout
                android:id="@+id/rlSwapAssetValueEditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <AutoCompleteTextView
                    android:id="@+id/actvSwapAssetValueEditField"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_alignParentTop="true"
                    android:textAllCaps="true"
                    android:inputType="textCapCharacters"
                    android:imeOptions="actionGo"
                    android:hint="Scan or Enter Asset Code" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlSwapAssetStepViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/routinestepgradient"
            android:visibility="visible"
            android:layout_below="@id/llSwapAssetStepEditLayout">

            <TextView
                android:id="@+id/tvSwapAssetStepHeaderView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:maxWidth="200dp"
                android:gravity="center_vertical"
                android:textStyle="italic"
                android:textSize="25sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Asset Code" />

            <TextView
                android:id="@+id/tvSwapAssetStepValueView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/tvSwapAssetStepHeaderView"
                android:hint="Scan or Enter Asset Code" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llSwapedAssetStepOuterLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="visible"
        android:layout_below="@id/llSwapAssetStepOuterLayout">
        <LinearLayout
            android:id="@+id/llSwapedAssetStepEditLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">
            <TextView
                android:id="@+id/tvSwapedAssetEditHeaderName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter New Asset"
                android:textColor="#FFFFFF"
                android:background="#000000"
                android:visibility="visible"/>
            <RelativeLayout
                android:id="@+id/rlSwapedAssetValueEditLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible">
                <AutoCompleteTextView
                    android:id="@+id/actvSwapedAssetValueEditField"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="40dp"
                    android:layout_alignParentTop="true"
                    android:textAllCaps="true"
                    android:inputType="textCapCharacters"
                    android:imeOptions="actionGo"
                    android:hint="Scan or Enter Asset Code" />
            </RelativeLayout>
        </LinearLayout>
        <RelativeLayout
            android:id="@+id/rlSwapedAssetStepViewLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/routinestepgradient"
            android:visibility="visible"
            android:layout_below="@id/llSwapedAssetStepEditLayout">

            <TextView
                android:id="@+id/tvSwapedAssetStepHeaderView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:maxWidth="200dp"
                android:gravity="center_vertical"
                android:textStyle="italic"
                android:textSize="25sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:text="Asset Code" />

            <TextView
                android:id="@+id/tvSwapedAssetStepValueView"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:minWidth="100dp"
                android:gravity="center_vertical"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@id/tvSwapedAssetStepHeaderView"
                android:hint="Scan or Enter Asset Code" />
        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/ivSwapScan"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:paddingTop="2dp"
        android:src="@drawable/scan_icon"
        android:layout_centerInParent="true"
        android:onClick="scan"/>
</RelativeLayout>